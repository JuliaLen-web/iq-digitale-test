              img(src=require('@/assets/img/person_2.jpg') alt="")
            .swiper-slide
              img(src=require('@/assets/img/person_3.jpg') alt="")
            .swiper-slide
              img(src=require('@/assets/img/people_1.jpg') alt="")
            .swiper-slide
              img(src=require('@/assets/img/people_2.jpg') alt="")
            .swiper-slide
              img(src=require('@/assets/img/person_2.jpg') alt="")
